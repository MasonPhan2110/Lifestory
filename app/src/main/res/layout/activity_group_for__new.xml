<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Group_for_NewActivity"
    android:background="@color/white">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/mylayout">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/grp_backgr"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name Group"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:id="@+id/name_grp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Public group - 10 Members"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"
                    android:id="@+id/privacy_member"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin ="10dp"
                    android:id="@+id/request">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_launcher_foreground"
                            android:id="@+id/profile_image"/>
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/profile_image"
                            android:layout_toEndOf="@id/profile_image"
                            android:text="Bùi Thị Linh đã mời bạn"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:id="@+id/text1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/profile_image"
                            android:layout_toEndOf="@id/profile_image"
                            android:layout_below="@id/text1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="3dp"
                            android:text="Join this group to post and comment"
                            android:id="@id/text2"/>
                        <Button
                            android:layout_width="180dp"
                            android:layout_height="35dp"
                            android:layout_below="@id/text2"
                            android:text="Join Group"
                            android:textAllCaps="false"
                            android:layout_marginTop="10dp"
                            android:id="@+id/join"
                            android:background="@color/darkblue"
                            android:textColor="@color/white"/>
                        <Button
                            android:layout_width="180dp"
                            android:layout_height="35dp"
                            android:layout_below="@id/text2"
                            android:layout_alignParentRight="true"
                            android:text="Delete Invite"
                            android:textAllCaps="false"
                            android:layout_marginTop="10dp"
                            android:id="@+id/delete"
                            android:background="@color/grey"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Activity"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:background="@color/grey"
                    android:id="@+id/text"/>

            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>